{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "jsx": "react",
    "target": "esnext",
    "module": "Node16", 
    "moduleResolution": "Node16",
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "src/**/*"
  ]
}
